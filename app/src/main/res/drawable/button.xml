<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="5dp"
                />
            <solid
                android:color="#02722D"
                />
            <padding
                android:left="0dp"
                android:top="10dp"
                android:right="0dp"
                android:bottom="10dp"
                android:background="#FFFFFF"
                />
        </shape>
    </item>


    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="5dp"
                />
            <solid
                android:color="#FFFFFF"
                />
            <padding
                android:left="0dp"
                android:top="10dp"
                android:right="0dp"
                android:bottom="10dp"
                />
        </shape>
    </item>
</selector>
